---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import ContactCTA from '../../components/ContactCTA.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import Pill from '../../components/Pill.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

interface Props {
	entry: CollectionEntry<'work'>;
}

export async function getStaticPaths() {
	const work = await getCollection('work');
	return work.map((entry) => ({
		params: { slug: entry.id },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const publishedDate = entry.data.publishDate.toLocaleDateString('en-US', {
	year: 'numeric',
	month: 'long',
});
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
	<div class="stack gap-20">
		<div class="stack gap-15">
			<header>
				<div class="wrapper stack gap-2">
					<a class="back-link" href="/work/"><Icon icon="arrow-left" /> Work</a>
					<Hero title={entry.data.title} align="start">
						<p class="description">{entry.data.description}</p>
					</Hero>
				</div>
			</header>
			<main class="wrapper">
				<div class="project-layout">
					<article class="content">
						<Content />
					</article>
					<aside class="sidebar">
						<div class="sidebar-section">
							<h3 class="sidebar-label">Tags</h3>
							<div class="sidebar-tags">
								{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
							</div>
						</div>
						<div class="sidebar-section">
							<h3 class="sidebar-label">Published</h3>
							<time class="sidebar-value">{publishedDate}</time>
						</div>
						<div class="sidebar-section sidebar-section--links">
							<a href="/work/" class="sidebar-back">
								<Icon icon="arrow-left" size="0.9em" /> All Projects
							</a>
						</div>
					</aside>
				</div>
			</main>
		</div>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	header {
		padding-bottom: 2.5rem;
		border-bottom: 1px solid var(--gray-800);
	}

	.back-link {
		display: none;
	}

	.description {
		font-size: var(--text-lg);
		max-width: 54ch;
		color: var(--gray-300);
	}

	/* ── Two-column layout ── */
	.project-layout {
		display: grid;
		gap: 3rem;
	}

	/* ── Content (prose) column ── */
	.content {
		min-width: 0;
	}

	.content > * + * {
		margin-top: 1rem;
	}

	.content :global(h1),
	.content :global(h2),
	.content :global(h3),
	.content :global(h4),
	.content :global(h5) {
		margin: 1.5rem 0;
	}

	.content :global(img) {
		border-radius: 1.5rem;
		box-shadow: var(--shadow-sm);
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		width: 100%;
		height: auto;
	}

	.content :global(blockquote) {
		font-size: var(--text-lg);
		font-family: var(--font-brand);
		font-weight: 600;
		line-height: 1.1;
		padding-inline-start: 1.5rem;
		border-inline-start: 0.25rem solid var(--accent-dark);
		color: var(--gray-0);
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	.content :global(table) {
		width: 100%;
		border-collapse: collapse;
		font-size: var(--text-sm);
		margin: 1.5rem 0;
	}

	.content :global(th) {
		text-align: left;
		padding: 0.5rem 0.75rem;
		color: var(--gray-400);
		border-bottom: 1px solid var(--gray-700);
		font-weight: 500;
	}

	.content :global(td) {
		padding: 0.5rem 0.75rem;
		color: var(--gray-300);
		border-bottom: 1px solid var(--gray-800);
		vertical-align: top;
	}

	.content :global(tr:last-child td) {
		border-bottom: none;
	}

	.content :global(details) {
		margin-top: 2rem;
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1rem 1.25rem;
		background: var(--gradient-subtle);
	}

	.content :global(details summary) {
		cursor: pointer;
		font-weight: 500;
		color: var(--gray-300);
		list-style: none;
		padding: 0.125rem 0;
	}

	.content :global(details summary::-webkit-details-marker) {
		display: none;
	}

	.content :global(details summary::before) {
		content: '▶ ';
		font-size: 0.7em;
		color: var(--accent-regular);
	}

	.content :global(details[open] summary::before) {
		content: '▼ ';
	}

	.content :global(details > * + *) {
		margin-top: 0.5rem;
	}

	/* ── Sidebar ── */
	.sidebar {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: 1.5rem 2.5rem;
		padding: 1.25rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		align-self: start;
	}

	.sidebar-section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.sidebar-label {
		font-size: var(--text-xs, 0.75rem);
		color: var(--gray-500);
		text-transform: uppercase;
		letter-spacing: 0.08em;
		font-weight: 500;
		margin: 0;
	}

	.sidebar-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.375rem;
	}

	.sidebar-value {
		font-size: var(--text-sm);
		color: var(--gray-300);
	}

	.sidebar-back {
		display: inline-flex;
		align-items: center;
		gap: 0.25rem;
		color: var(--accent-regular);
		text-decoration: none;
		font-size: var(--text-sm);
		font-weight: 500;
		transition: color var(--theme-transition);
	}

	.sidebar-back:hover {
		color: var(--accent-text-over);
	}

	.back-link,
	.back-link:hover,
	.back-link:focus {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.back-link:hover,
	.back-link:focus {
		text-decoration-color: currentColor;
	}

	/* ── Desktop: two-column ── */
	@media (min-width: 50em) {
		.back-link {
			display: block;
			align-self: flex-start;
		}

		.project-layout {
			grid-template-columns: 1fr 18rem;
			gap: 4rem;
			align-items: start;
		}

		.sidebar {
			flex-direction: column;
			flex-wrap: nowrap;
			gap: 1.5rem;
			position: sticky;
			top: 2rem;
		}

		.content :global(blockquote) {
			font-size: var(--text-2xl);
		}
	}
</style>
