---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems } from "astro-navbar";
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";
import ThemeToggle from "./ThemeToggle.astro";

const iconLinks: {
	label: string;
	href: string;
	icon: keyof typeof iconPaths;
}[] = [
	{
		label: "GitHub",
		href: "https://github.com/stephenabbot?tab=repositories",
		icon: "github-logo",
	},
	{
		label: "LinkedIn",
		href: "https://www.linkedin.com/in/stephen-abbot/",
		icon: "linkedin-logo",
	},
];

const projectGroups = [
	{
		label: "Enterprise Tools",
		items: [
			{ label: "Technical Debt Tool", href: "/work/tdt-technical-debt-tool/" },
			{ label: "Email Handler", href: "/work/service-email-handler/" },
		],
	},
	{
		label: "Foundation",
		items: [
			{ label: "Terraform Bootstrap", href: "/work/foundation-terraform-bootstrap/" },
			{ label: "IAM Deploy Roles", href: "/work/foundation-iam-deploy-roles/" },
		],
	},
	{
		label: "Services",
		items: [
			{ label: "CloudTrail Observability", href: "/work/service-observability-cloudtrail/" },
			{ label: "Ephemeral Splunk", href: "/work/service-ephemeral-splunk/" },
			{ label: "Python Logger (mypylogger)", href: "/work/mypylogger/" },
		],
	},
	{
		label: "Website",
		items: [
			{ label: "Website Platform", href: "/work/professional-website-platform/" },
			{ label: "Website Infrastructure", href: "/work/website-infrastructure/" },
		],
	},
];

const isCurrentPage = (href: string) => {
	let pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
	if (pathname.at(0) !== "/") pathname = "/" + pathname;
	if (pathname.at(-1) !== "/") pathname += "/";
	return pathname === href || (href !== "/" && pathname.startsWith(href));
};
---

<Astronav>
	<nav>
		<div class="menu-header">
			<a href="/" class="site-title">
				<Icon icon="terminal-window" color="var(--accent-regular)" size="1.6em" gradient />
				Stephen Abbot
			</a>
			<MenuIcon class="menu-icon-btn">
				<div class="hamburger-icon">
					<Icon icon="list" />
				</div>
			</MenuIcon>
		</div>

		<MenuItems class="menu-content" id="menu-content">
			<ul class="nav-items">
				<li>
					<a aria-current={isCurrentPage("/") ? "page" : null} class="link" href="/">Home</a>
				</li>

				<!-- Projects dropdown -->
				<li class="dropdown-parent">
					<Dropdown class="dropdown-wrapper">
						<button
							class={`link dropdown-trigger${isCurrentPage("/work/") ? " active" : ""}`}
							aria-haspopup="true"
						>
							Projects <span class="dropdown-arrow">▾</span>
						</button>
						<DropdownItems class="dropdown-menu">
							<div class="dropdown-inner">
								{projectGroups.map((group) => (
									<div class="dropdown-group">
										<div class="dropdown-group-label">{group.label}</div>
										{group.items.map((item) => (
											<a
												href={item.href}
												class={`dropdown-item${isCurrentPage(item.href) ? " active" : ""}`}
											>
												{item.label}
											</a>
										))}
									</div>
								))}
								<div class="dropdown-group dropdown-group--footer">
									<a href="/work/" class="dropdown-item dropdown-item--all">
										View All Projects →
									</a>
								</div>
							</div>
						</DropdownItems>
					</Dropdown>
				</li>

				<li>
					<a aria-current={isCurrentPage("/architecture/") ? "page" : null} class="link" href="/architecture/">Architecture</a>
				</li>
				<li>
					<a aria-current={isCurrentPage("/experience/") ? "page" : null} class="link" href="/experience/">Experience</a>
				</li>
				<li>
					<a aria-current={isCurrentPage("/blog/") ? "page" : null} class="link" href="/blog/">Blog</a>
				</li>
				<li>
					<a aria-current={isCurrentPage("/resume/") ? "page" : null} class="link" href="/resume/">Resume</a>
				</li>
			</ul>

			<div class="menu-footer">
				<div class="socials">
					{
						iconLinks.map(({ href, icon, label }) => (
							<a href={href} class="social">
								<span class="sr-only">{label}</span>
								<Icon icon={icon} />
							</a>
						))
					}
				</div>
				<div class="theme-toggle">
					<ThemeToggle />
				</div>
			</div>
		</MenuItems>
	</nav>
</Astronav>

<style>
	nav {
		z-index: 9999;
		position: relative;
		font-family: var(--font-brand);
		font-weight: 500;
		margin-bottom: 3.5rem;
	}

	.menu-header {
		display: flex;
		justify-content: space-between;
		gap: 0.5rem;
		padding: 1.5rem;
	}

	.site-title {
		display: flex;
		gap: 0.5rem;
		align-items: center;
		line-height: 1.1;
		color: var(--gray-0);
		text-decoration: none;
	}

	.hamburger-icon {
		display: flex;
		border: 0;
		border-radius: 999rem;
		padding: 0.5rem;
		font-size: 1.5rem;
		color: var(--gray-300);
		background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
		box-shadow: var(--shadow-md);
		cursor: pointer;
	}

	.menu-content {
		display: none;
		position: absolute;
		left: 0;
		right: 0;
		background-color: var(--gray-999);
		border-bottom: 1px solid var(--gray-800);
		border-radius: 0 0 0.75rem 0.75rem;
		box-shadow: var(--shadow-lg);
	}

	.nav-items {
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		font-size: var(--text-md);
		line-height: 1.2;
		list-style: none;
		padding: 2rem;
	}

	.link {
		display: inline-block;
		color: var(--gray-300);
		text-decoration: none;
		background: none;
		border: none;
		font-family: var(--font-brand);
		font-weight: 500;
		font-size: inherit;
		cursor: pointer;
		padding: 0;
	}

	.link[aria-current="page"],
	.link.active {
		color: var(--gray-0);
	}

	.dropdown-trigger {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.dropdown-arrow {
		font-size: 0.75em;
		opacity: 0.7;
	}

	.dropdown-menu {
		margin-top: 0.25rem;
	}

	.dropdown-inner {
		background-color: var(--gray-999);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 0.75rem;
		min-width: 14rem;
		box-shadow: var(--shadow-lg);
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.dropdown-group {
		display: flex;
		flex-direction: column;
		gap: 0.125rem;
	}

	.dropdown-group-label {
		font-size: var(--text-xs, 0.75rem);
		color: var(--gray-500);
		text-transform: uppercase;
		letter-spacing: 0.08em;
		padding: 0.25rem 0.5rem 0.125rem;
	}

	.dropdown-item {
		display: block;
		padding: 0.375rem 0.5rem;
		color: var(--gray-300);
		text-decoration: none;
		border-radius: 0.375rem;
		font-size: var(--text-sm);
		transition: background-color var(--theme-transition), color var(--theme-transition);
	}

	.dropdown-item:hover,
	.dropdown-item:focus {
		background-color: var(--accent-subtle-overlay);
		color: var(--gray-100);
	}

	.dropdown-item.active {
		color: var(--accent-text-over);
		background-color: var(--accent-regular);
	}

	.dropdown-group--footer {
		border-top: 1px solid var(--gray-800);
		padding-top: 0.375rem;
		margin-top: 0.125rem;
	}

	.dropdown-item--all {
		font-weight: 500;
		color: var(--accent-regular);
	}

	.dropdown-item--all:hover {
		color: var(--accent-text-over);
	}

	.menu-footer {
		--icon-size: var(--text-xl);
		--icon-padding: 0.5rem;
		display: flex;
		justify-content: space-between;
		gap: 0.75rem;
		padding: 1.5rem 2rem 1.5rem 1.5rem;
		background-color: var(--gray-999);
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		gap: 0.625rem;
		font-size: var(--icon-size);
	}

	.social {
		display: flex;
		padding: var(--icon-padding);
		text-decoration: none;
		color: var(--accent-dark);
		transition: color var(--theme-transition);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-text-over);
	}

	.theme-toggle {
		display: flex;
		align-items: center;
		height: calc(var(--icon-size) + 2 * var(--icon-padding));
	}

	@media (min-width: 50em) {
		nav {
			display: grid;
			grid-template-columns: 1fr auto 1fr;
			align-items: center;
			padding: 2.5rem 5rem;
			gap: 1rem;
		}

		.menu-header {
			padding: 0;
		}

		.site-title {
			font-size: var(--text-lg);
		}

		.menu-content {
			display: contents;
			position: static;
			background: none;
			border: none;
			box-shadow: none;
		}

		.nav-items {
			position: relative;
			flex-direction: row;
			align-items: center;
			font-size: var(--text-sm);
			border-radius: 999rem;
			border: 0;
			padding: 0.5rem 0.5625rem;
			background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
			box-shadow: var(--shadow-md);
			gap: 0;
		}

		.nav-items::before {
			position: absolute;
			inset: -1px;
			content: "";
			background: var(--gradient-stroke);
			border-radius: 999rem;
			z-index: -1;
		}

		.link {
			padding: 0.5rem 1rem;
			border-radius: 999rem;
			transition: color var(--theme-transition), background-color var(--theme-transition);
		}

		.link:hover,
		.link:focus {
			color: var(--gray-100);
			background-color: var(--accent-subtle-overlay);
		}

		.link[aria-current="page"],
		.link.active {
			color: var(--accent-text-over);
			background-color: var(--accent-regular);
		}

		.dropdown-parent {
			position: relative;
		}

		.dropdown-menu {
			position: absolute;
			top: calc(100% + 0.5rem);
			left: 50%;
			transform: translateX(-50%);
			z-index: 100;
			width: 16rem;
		}

		.dropdown-inner {
			width: 100%;
		}

		.menu-footer {
			--icon-padding: 0.375rem;
			justify-self: flex-end;
			align-items: center;
			padding: 0;
			background-color: transparent;
			box-shadow: none;
		}

		.socials {
			display: none;
		}
	}

	@media (min-width: 60em) {
		.socials {
			display: flex;
			justify-content: flex-end;
			gap: 0;
		}
	}

	@media (forced-colors: active) {
		.link[aria-current="page"] {
			color: SelectedItem;
		}
	}
</style>
