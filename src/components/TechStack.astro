---
import Icon from './Icon.astro';
import Pill from './Pill.astro';

// Core technologies to display on homepage
const coreTechnologies = [
	{ name: "AWS", icon: "code" },
	{ name: "Terraform", icon: "terminal-window" },
	{ name: "Python", icon: "code" },
	{ name: "Splunk", icon: "eye" },
	{ name: "CloudWatch", icon: "terminal-window" },
	{ name: "Kubernetes", icon: "microchip" },
];
---

<section class="tech-stack">
	<div class="stack gap-2 lg:gap-4">
		<div class="tech-header">
			<Icon icon="microchip" color="var(--accent-regular)" size="2rem" gradient />
			<h2>Core Technologies</h2>
		</div>
		<p>Primary technologies I work with daily in cloud architecture and site reliability engineering</p>
		<div class="tech-pills">
			{coreTechnologies.map((tech) => (
				<Pill>
					<Icon icon={tech.icon} size="1em" />
					{tech.name}
				</Pill>
			))}
		</div>
	</div>
</section>

<style>
	.tech-stack {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.tech-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.tech-stack h2 {
		font-size: var(--text-lg);
		margin: 0;
	}

	.tech-stack p {
		color: var(--gray-400);
		margin: 0;
	}

	.tech-pills {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	@media (min-width: 50em) {
		.tech-stack {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.tech-stack h2 {
			font-size: var(--text-2xl);
		}
	}
</style>
